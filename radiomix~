#!/bin/bash -x

source config

listaradiomix=`cat $HOME/.tvmaxe-cli/playlist/.radiomix.tvro|awk '{print $1}'|nl`
##########################################
mkdir -p /tmp/tvmaxe-cli
if [ ! -f $HOME/.tvmaxe-cli/playlist/.radiomix.tvro ];
then
	wget -qO - http://pastebin.com/raw.php?i=MTrXrhsu|sed 's/||/\n/g;s/ /_/g;s/|/ /g'|awk '{print $2"|"$4}'|sort -d|sed 's/|/ /g'|sed '1,2d'  > $HOME/.tvmaxe-cli/playlist/.radiomix.tvro
fi
radiomix (){
	$DIALOG --backtitle "tvmaxe-cli" \
	  --title "RadioMix" --clear \
          --menu ":::" 30 35 30 $listaradiomix 2> $tempfile
      	selectie0=$?
	if [ "$selectie0" == "255" ]||[ "$selectie0" == "1" ]; then
   		exit 0
 	fi
nume_post_tv=`cat $tempfile`
nr_post_tv=`cat $HOME/.tvmaxe-cli/playlist/.radiomix.tvro|sed -n "/$nume_post_tv/="`
cat $HOME/.tvmaxe-cli/playlist/.radiomix.tvro|sed -n "${nr_post_tv}p" > /tmp/tvmaxe-cli/adr
	    }
#########################################
radiomix
sleep 0.5
./filtrutv
