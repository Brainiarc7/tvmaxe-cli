#!/bin/bash -x

source config
	$DIALOG --backtitle "$nume" \
	  --title "$descriere" --clear \
          --menu "Meniu film:" 25 30 25 \
	"01" "Redati" \
	"02" "Inregistrati" \
	"03" "Descarcati" \
	"04" "Adaugati la favorite" \
	"05" "Reveniti" \
	"06" "Parasiti" 2>$tempfile1
  selectie0=$?
  selectat1=`cat $tempfile1`
  
  case "$selectat1" in
	01)	$player $film1 ;;

	02)	wget -O $salvare/$nume1$ext $film1 &>/dev/null &
		sleep $delay ; 
		wait $($player $salvare/$nume1$ext $postplay); 
		killall wget ;;

	03)	axel -a -o $salvare/$nume1$ext $film1 ;;

	04)	echo fav ;;

	05)	./tvmaxe-cli ;;

	06)	exit 0 ;;
  esac

  if [ "$selectie0" == "255" ]; then
   echo "Exit by ESC!"
   exit 0
  fi
  done
