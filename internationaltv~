#!/bin/bash -x

source config

cale=$HOME/.tvmaxe-cli/playlist/.internationaltv.tvro
export $cale
listatvint=`cat $HOME/.tvmaxe-cli/playlist/.internationaltv.tvro|awk '{print $1,"|"}'`

##########################################
mkdir -p /tmp/tvmaxe-cli
if [ ! -f $HOME/.tvmaxe-cli/playlist/.internationaltv.tvro ];
then
	wget -qO - http://tv-maxe.org/subscriptions/cli.php?db=International|sed 's/|||/\n/g'>/tmp/tvmaxe-cli/tmp2
	cat /tmp/tvmaxe-cli/tmp2|sed 's/*/\n/g'|sort -d|sed "s/||/ /g;s/spice:/rtmp:/g;s/%key%/${keyspice}/g">	$HOME/.tvmaxe-cli/playlist/.internationaltv.tvro
fi
##########################################
internationaltv () {
	$DIALOG --backtitle "tvmaxe-cli" \
	  --title "InternationalTV" --clear \
          --menu ":::" 30 35 30 $listatvint 2> $tempfile
      	selectie0=$?
	if [ "$selectie0" == "255" ]||[ "$selectie0" == "1" ]; then
   		exit 0
 	fi
nume_post_tv=`cat $tempfile`
nr_post_tv=`cat $HOME/.tvmaxe-cli/playlist/.internationaltv.tvro|sed -n "/$nume_post_tv/="`
cat $HOME/.tvmaxe-cli/playlist/.internationaltv.tvro|sed -n "${nr_post_tv}p" > /tmp/tvmaxe-cli/adr

	    }
##########################################

internationaltv
./filtrutv
